<header class="top-page-header2">
  <div class="title">
    <%= link_to "Cattle_Feed", cows_path, class: "title-text"%>
  </div>
  <div class="sub-contents">
    <div class="back-btn">
      <%= link_to "戻る", cow_path(@cow.id), class: 'btn'%>
    </div>
  </div>
</header>
<div class="main-contents">
  <%= form_with model: @cow, class: 'registration-cow', local: true do |form| %>
    <div class="main-title">
      牛の編集
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">個体番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= form.text_field :numbers, class:"input-default", id:"cow-number", placeholder:"(10桁)", maxlength:"10" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    form.date_select(
                      :birth_day,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1980,
                      end_year: (Time.now.year),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">メモ<label>
      </div>
      <%= form.text_area :memo, class:"input-memo", id:"cow-memo", placeholder:"メモ入力欄" %>
    </div>
    <div class="btn-corner">
      <div class='register-btn'>
        <%= form.submit "変更" ,class:"register-cow-btn" %>
      </div>
      <div class='destroy-btn'>
        <%= link_to "削除", cow_path, method: :delete, class:"delete-cow-btn" %>
      </div>
    </div>
  <% end %>
</div>