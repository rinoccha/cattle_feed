<%= render "shared/header2" %>
<div class="main-contents">
  <%= form_with(model: @cow, local: true) do |form| %>
    <div class="main-title">
      牛の追加
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">個体番号</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :cow_number, class:"input-default", id:"cow-number", placeholder:"1234567890", maxlength:"10" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birth_day,
                      class:'select-birth',
                      id:"birth-date",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1980,
                      end_year: (Time.now.year),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">メモ<label>
      </div>
      <%= f.text_area :cow_memo, class:"input-memo", id:"cow-memo", placeholder:"メモ入力欄" %>
    </div>
    <div class='register-btn'>
      <%= f.submit "追加" ,class:"register-btn" %>
  </div>
  <% end %>
</div>